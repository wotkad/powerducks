.cases-bg
	position absolute
	left 0
	bottom 0
.cases
	padding-bottom 100px
	display flex
	flex-wrap wrap
	justify-content center
	&__button
		border 1px solid $text
		font-size 1.5rem
		line-height 24px
		font-family $B-Bold
		letter-spacing 1px
		color $text
		padding 26px 46px
		border-radius 5px
		background none
		cursor pointer
		transition .3s
		width 320px
		margin 30px auto 0 auto
		text-align center
		display block
		& span
			&:nth-child(2)
				margin-left 5px
		&:hover
			color $white
			border-color $red
			background $red
			box-shadow 0px 0px 60px $red
		i
			transition .3s
		&:hover i
			transform rotate(180deg)
	&__block
		transition .3s
		border-radius 5px
		margin-bottom 50px
		position relative
		display block
		&:last-child
			margin-bottom 80px
		&-img
			border-radius 5px 5px 0 0
			height 483px
		&-corner
			position absolute
			top -8px
			left 35px
		&-logo
			position absolute
			top -8px
			left 39px
			width 135px
			height 155px
			background-color #1B1B1B
			display flex
			align-items center
			justify-content center
		&__content
			padding 25px 41px
			background linear-gradient(180deg, #FFFFFF 0%, #EBEBEB 100%)
			border-radius 0 0 5px 5px
			box-shadow 0px 4px 60px rgba(0, 0, 0, 0.3)
			position relative
			overflow hidden
			display grid
			grid-template-columns repeat(3, 1fr)
			&-button
				grid-column 3 / 4
				grid-row 1 / 3
				display flex
				align-items center
				margin-left 30px
				justify-content flex-end
				&-item
					background-color $red
					color $white
					transition .3s
					font-family $B-Bold
					font-size 1.5rem
					line-height 24px
					padding 23px
					width 100%
					max-width 320px
					text-align center
					letter-spacing 1px
					border-radius 5px
					border 2px solid transparent
					&:hover
						background-color $white
						color $red
						border-color $red
			&-title
				font-family $B-Regular
				font-size 2rem
				line-height 32px
				color $text
				margin-bottom 15px
				z-index 2
				grid-column 1 / 3
				position relative
			&-text
				font-family $Regular
				font-size 1.125rem
				line-height 28px
				color $black
				grid-column 1 / 3
				z-index 2
				position relative
			&-bg
				position absolute
				right 0
				bottom 0
				top 0
				z-index 1
				& svg path
					transition .5s
		&:hover .selectedwork__slider-slide__content-bg svg path
			fill-opacity 1
@media(max-width: 767px)
	.cases
		&__block
			&-img
				height 283px
			&__content
				&-text
					flex-basis 100%
				&-button
					display none
@media(max-width: 715px)
	.cases
		padding-bottom 50px
		&__button
			padding 15px 46px
			margin-top 0
			width 100%
		&__block
			&__content
				&-bg
					display none
				&-text
					grid-column 1 / 4
				&-title
					grid-column 1 / 4
