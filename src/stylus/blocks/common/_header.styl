#header
	background: linear-gradient(180deg, #FFFFFF 0%, #F2F2F2 100%);
	z-index 997
	position fixed
	width 100%
	top 0
.header
	height 120px
	display flex
	justify-content space-between
	align-items center
	border-radius 0 0 5px 5px
	position relative
	transition .3s
	&__item
		display flex
		align-items center
		&:nth-child(1)
			display none
		& svg
			cursor pointer
			&:first-child
				margin-right 15px
		&-link
			font-family $B-Regular
			color $gray
			height 100%
			line-height 118px
			font-size 1rem
			margin-right 30px
			border-bottom 2px solid transparent
			transition .3s
			&:hover
				border-color $red
				color $red
			&:last-child
				margin-right 0
		& i
			font-size 20px
		&-phone
			font-family $B-Bold
			font-size 1.25rem
			margin 0 30px 0 10px
			transition .3s
			&:hover
				color $red
		&-lang
			&-item
				font-family $B-Regular
				font-size 1rem
				&-active
					color $black
					transition .3s
					border-bottom 1px solid transparent
					&:hover
						border-color $black
				&-notactive
					color $lang
					border-bottom 1px solid $lang

		& span
			margin 0 2px
			color $black
.mob
	&__menu
		display none
.disabled-scroll
	overflow-y hidden
@media(max-width: 1024px)
	#header .g-wrapper
		padding 0
	.header
		width 100%
		height 80px
		&__item
			&-link
				line-height 78px
			&:nth-child(1)
				display none
				position absolute
				height 80px
				width 80px
				align-items center
				justify-content center
				transition .3s
				cursor pointer
				& svg
					margin 0
				&:hover
					background-color #232323
					& line
						stroke $white
			&-active
				background-color #232323
				& line
					stroke $white
			&:nth-child(2)
				padding-left 20px
				max-width 20%
			&:nth-child(3)
				flex-basis 66%
				justify-content center
			&:nth-child(4)
				flex-wrap wrap
				justify-content flex-end
				flex-basis 17%
				padding-right 20px
			&-lang
				margin-top 10px
				flex-basis 100%
				justify-content flex-end
				display flex
			&-phone
				margin-right 0
@media (max-width:767px)
	.mob
		position relative
		&__overlay
			background url(/images/menu-bg.png) 50% 50% no-repeat
			background-size cover
			position absolute
			height 100%
			width 100%
			top 0
			left 0
			right 0
			bottom 12.5%
		&__menu
			transition .5s
			height calc(100vh - 80px)
			position fixed
			left -100%
			top 80px
			z-index 9999
			background-color #232323
			width 100%
			display flex
			flex-wrap wrap
			&-item
				height 12.5%
				flex-basis 100%
				font-family $B-Light
				font-size 3.25rem
				color $white
				line-height 52px
				display flex
				align-items center
				justify-content center
				transition .3s
				z-index 1
				&-link
					&-active
						color #6f6f6f
						transition .3s
						border 2px solid transparent
						&:hover
							color $white
							border-bottom 2px solid $white
					&-notactive
						color $white
						border-bottom 2px solid $white
				& span
					margin 0 6px
				&:last-child
					background-color #151515
					&:hover
						color $white
				&:hover
					color $red
	.mob
		&__menu
			&-active
				transform translateX(100%)
	.header
		background linear-gradient(180deg, #FFFFFF 0%, #F2F2F2 100%)
		z-index 2
		height 80px
		position fixed
		top 0
		left 0
		&__item
			&:nth-child(1)
				display flex
			&:nth-child(2)
				order 2
				max-width 100%
				margin 0 auto
			&:nth-child(3)
				display none
			&:nth-child(4)
				order 3
				flex-wrap nowrap
				justify-content center
				flex-basis auto
				position absolute
				right 0
			&-lang
				display none
@media (max-width:480px)
	.header
		height 60px
		&__item
			&:nth-child(1)
				height 60px
				width 60px
			svg
				&:first-child
					margin 0
				&:nth-child(2)
					display none
			&:nth-child(4)
				justify-content flex-end
			&-phone
				display none
			& i
				font-size 28px
	.mob
		&__menu
			height calc(100vh - 116px)
			top 60px
			&-item
				font-size 2rem
				line-height 32px
