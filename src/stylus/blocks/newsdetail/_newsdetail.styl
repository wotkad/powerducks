.newsdetail
	&__button
		border 1px solid $text
		font-size 1.5rem
		line-height 24px
		font-family $B-Bold
		letter-spacing 1px
		color $text
		padding 26px 46px
		border-radius 5px
		background none
		cursor pointer
		transition .3s
		width 320px
		margin 0 auto 80px auto
		text-align center
		display block
		& span
			&:nth-child(2)
				margin-left 5px
		&:hover
			color $white
			border-color $red
			background $red
			box-shadow 0px 0px 60px $red
		i
			transition .3s
		&:hover i
			transform rotate(180deg)
	&__quote
		flex-basis 100%
		border: 1px solid #E5E5E5;
		background $white
		padding 32px 55px
		display flex
		flex-wrap wrap
		margin-bottom 50px
		position relative
		box-shadow 0px 4px 60px rgba(0, 0, 0, 0.25)
		&-bg
			position absolute
			top 19px
			left 15px
		&-text
			font-family $Regular
			font-size 1.125rem
			line-height 28px
			display flex
			color $text
			margin-bottom 20px
			&-image
				margin-left 40px
		&-author
			font-family $Semibold
			font-size 1.125rem
			line-height 28px
			color $text
			display flex
			align-items center
			img
				margin-left 20px
	&__text
		padding 0 75px
		margin-bottom 50px
		&-title
			font-family $B-Regular
			font-size 2rem
			line-height 32px
			color $text
			margin-bottom 30px
		p
			font-family $Regular
			font-size 1.125rem
			line-height 34px
			margin-bottom 10px
			color $text
		ol
			margin 40px 0
			padding 0 30px
		&-li
			padding 0 10px
			color $red
			font-family $Bold
			font-size 1.125rem
			line-height 34px
			margin-bottom 40px
			& span
				&:nth-child(1)
					color $text
					font-family $Bold
					font-size 1.125rem
					line-height 34px
				&:nth-child(2)
					color $text
					font-family $Regular
					font-size 1.125rem
					line-height 34px
					margin-left 5px
			.cyrilic
				padding 0
				&-image
					margin 30px 0
					width 48%
					display inline-block
					img
						width 100%
				li
					font-family $Regular
					color $text
					list-style-type none
					&:nth-child(1)
						&:before
							padding-right 10px
							color $red
							content 'a.'
					&:nth-child(2)
						&:before
							padding-right 10px
							color $red
							content 'b.'
					&:nth-child(3)
						&:before
							padding-right 10px
							color $red
							content 'c.'
					&:nth-child(4)
						&:before
							padding-right 10px
							color $red
							content 'd.'
					p
						font-family $Semibold
						display inline
					a
						margin-left 5px
						color $red
						border-bottom 1px solid $red
						transition .3s
						&:hover
							border-color $black
							color $black
	&__container
		margin-bottom 50px
		display flex
		justify-content space-around
		align-items center
		&-text
			font-family $Regular
			font-size 1.125rem
			line-height 34px
			color $text
			flex-basis 50%
			p
				font-family $Semibold
				margin-bottom 10px
				&:nth-child(1)
					font-family $Regular
				span
					margin-left 5px
					font-family $Regular
	&__grid
		display grid
		grid-template-columns repeat(10, 1fr)
		grid-gap 20px
		margin-bottom 80px
		&-item
			min-height 238px
			border-radius 5px
			position relative
			padding 0 40px 40px 40px
			overflow hidden
			cursor pointer
			transition .3s
			&:hover &-content
				margin-top 0
			&:hover &-title
				margin-bottom 130px
			&-title
				font-family $B-Regular
				font-size 2rem
				position absolute
				bottom 40px
				transition .3s
				line-height 32px
				color $white
			&-content
				position absolute
				margin-top 200px
				transition .3s
				height 100%
				width 100%
				display flex
				flex-direction column
				justify-content flex-end
				padding 40px
				left 0
				border-radius 5px
				border-bottom 10px solid $red
				&-desc
					font-size 1.125rem
					font-family $Regular
					color $white
					transition .3s
					line-height 28px
					margin-bottom 20px
				&-link
					a
						color $white
						font-family $B-Regular
						font-size 1.125rem
						line-height 18px
						border-bottom 1px dashed $white
						transition .3s
						&:hover
							color $red
							border-color $red
			&:nth-child(1)
				grid-column 1 / 7
			&:nth-child(2)
				grid-column 7 / 11
				grid-row 1 / 3
			&:nth-child(3)
				grid-column 1 / 7
@media(max-width:767px)
	.newsdetail
		&__grid
			margin-bottom 50px
			&-item
				&:nth-child(1)
					grid-column 1 / 11
				&:nth-child(2)
					grid-column 1 / 11
					grid-row 2 / 3
				&:nth-child(3)
					grid-column 1 / 11
		&__container
			margin-bottom 25px
			flex-direction column
			&-image
				margin-bottom 25px
				& img
					width 100%
		&__text
			padding 0
			margin-bottom 25px
			& ol
				padding 0 15px
				margin 25px 0
			&-li
				margin-bottom 25px
				.cyrilic-image
					margin 30px auto
					width auto
					display block
		&__quote
			padding 25px
			margin-bottom 25px
			&-text
				flex-direction column
				&-image
					margin 30px auto 10px
		&__button
			margin-bottom 50px
			padding 15px 46px
@media(max-width:480px)
	.newsdetail
		&__quote
			&-author
				flex-direction column
				align-items flex-start
				& img
					margin-left 0
					margin-top 15px
