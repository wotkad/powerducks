.pageheadingnewsdetail
	overflow hidden
	padding 48px
	position relative
	margin-top 160px
	margin-bottom 40px
	border-radius 5px
	background linear-gradient(180deg, #FFFFFF 0%, #EBEBEB 100%)
	box-shadow 0px 4px 60px rgba(0, 0, 0, 0.15)
	&__breadcrums
		position relative
		z-index 2
		margin-bottom 30px
		a
			&:nth-child(1)
				color $white
				font-family $B-Regular
				font-size 1.125rem
				line-height 18px
				border-bottom 1px solid $white
				transition .3s
				&:hover
					color $breadcrums
					border-color $breadcrums
			&:nth-child(3)
				color $white
				font-family $B-Regular
				font-size 1.125rem
				line-height 18px
				transition .3s
				border-bottom 1px solid $white
				&:hover
					color $breadcrums
					border-color $breadcrums
			&:nth-child(5)
				color $breadcrums
				font-family $B-Regular
				font-size 1.125rem
				line-height 18px
				transition .3s
				border-bottom 1px solid transparent
				&:hover
					color $white
					border-bottom 1px solid $white
		span
			&:nth-child(2)
				color $breadcrums
				margin 4px
			&:nth-child(4)
				color $breadcrums
				margin 4px
	&__title
		position relative
		z-index 2
		color $white
		font-family $B-Bold
		font-size 5.75rem
		line-height 92px
	&__image
		position absolute
		top 0
		left 0
		right 0
		bottom 0
@media(max-width: 991px)
	.pageheadingnewsdetail
		margin-top 120px
		padding 30px
		height auto
		&__title
			font-size 3rem
			line-height 48px
@media(max-width: 480px)
	.pageheadingnewsdetail
		margin-top 100px
		padding 30px
		height auto
