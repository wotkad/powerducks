.ournews-bg
	position absolute
	left 0
	bottom 0
.ournews
	padding 0 0 90px 0
	&__blocks
		display grid
		grid-template-columns repeat(10, 1fr)
		grid-gap 20px
		margin-bottom 20px
		&-block
			min-height 238px
			border-radius 5px
			position relative
			padding 0 40px 40px 40px
			overflow hidden
			cursor pointer
			transition .3s
			&:hover &-content
				margin-top 0
			&:hover &-title
				margin-bottom 140px
			&-title
				font-family $B-Regular
				font-size 2rem
				position absolute
				bottom 40px
				transition .3s
				line-height 32px
				color $white
			&-content
				position absolute
				margin-top 200px
				transition .3s
				height 100%
				width 100%
				display flex
				flex-direction column
				justify-content flex-end
				padding 40px
				left 0
				border-radius 5px
				border-bottom 10px solid $red
				&-desc
					font-size 1.125rem
					font-family $Regular
					color $white
					transition .3s
					line-height 28px
					margin-bottom 20px
				&-link
					a
						color $white
						font-family $B-Regular
						font-size 1.125rem
						line-height 18px
						border-bottom 1px dashed $white
						transition .3s
						display inline-table
						&:hover
							color $red
							border-color $red
			&:nth-child(7n+1)
				grid-column 1 / 5
				grid-row 1 / 3
			&:nth-child(7n+2)
				grid-column 5 / 11
			&:nth-child(7n+3)
				grid-column 5 / 8
				.ournews__blocks-block-title
					font-size 1.5rem
					bottom 20px
					left 20px
					right 20px
				.ournews__blocks-block-content
					padding 20px
			&:nth-child(7n+4)
				grid-column 8 / 11
				.ournews__blocks-block-title
					font-size 1.5rem
					bottom 20px
					left 20px
					right 20px
				.ournews__blocks-block-content
					padding 20px
			&:nth-child(7n+5)
				grid-column 1 / 7
			&:nth-child(7n+6)
				grid-column 7 / 11
				grid-row 3 / 5
			&:nth-child(7n+7)
				grid-column 1 / 7
	&__button
		border 1px solid $text
		font-size 1.5rem
		line-height 24px
		font-family $B-Bold
		letter-spacing 1px
		color $text
		padding 26px 46px
		border-radius 5px
		background none
		cursor pointer
		transition .3s
		width 320px
		margin 60px auto 0 auto
		text-align center
		& span
			&:nth-child(2)
				margin-left 5px
		&:hover
			color $white
			border-color $red
			background $red
			box-shadow 0px 0px 60px $red
		i
			transition .3s
		&:hover i
			transform rotate(180deg)
@media(max-width: 767px)
	.ournews-bg
		display none
	.ournews
		padding-bottom 50px
		&__blocks
			grid-template-columns repeat(8, 1fr)
			&-block
				padding 0 20px 20px 20px
				min-height 160px
				&:hover &-title
					margin-bottom 40px
				&-content
					padding 20px
					&-desc
						display none
				&-title
					bottom 20px
					line-height 24px
				&:nth-child(1)
					grid-column 1 / 5
					// grid-row 1 / 3
				&:nth-child(2)
					grid-column 5 / 9
				&:nth-child(3)
					grid-column 5 / 7
					.ournews__blocks-block-title
						font-size 1.5rem
				&:nth-child(4)
					grid-column 7 / 9
					.ournews__blocks-block-title
						font-size 1.5rem
				&:nth-child(5)
					grid-column 1 / 5
				&:nth-child(6)
					grid-column 5 / 9
					// grid-row 3 / 5
				&:nth-child(7)
					grid-column 1 / 5
@media(max-width: 715px)
	.ournews
		&__button
			padding 15px 46px
			width 100%
		&__blocks
			grid-template-columns repeat(1, 1fr)
			&-block
				&:nth-child(1)
					grid-column 1 / 1
					grid-row 1 / 2
					.ournews__blocks-block-title
						font-size 1.5rem
				&:nth-child(2)
					grid-column 1 / 1
					.ournews__blocks-block-title
						font-size 1.5rem
				&:nth-child(3)
					grid-column 1 / 1
				&:nth-child(4)
					grid-column 1 / 1
				&:nth-child(5)
					grid-column 1 / 1
					.ournews__blocks-block-title
						font-size 1.5rem
				&:nth-child(6)
					grid-column 1 / 1
					grid-row 3 / 5
					.ournews__blocks-block-title
						font-size 1.5rem
				&:nth-child(7)
					grid-column 1 / 1
					.ournews__blocks-block-title
						font-size 1.5rem
