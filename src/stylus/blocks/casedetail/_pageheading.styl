.pageheadingcasedetail
	padding 48px
	position relative
	margin-top 160px
	margin-bottom 40px
	border-radius 5px
	background linear-gradient(180deg, #FFFFFF 0%, #EBEBEB 100%)
	box-shadow 0px 4px 60px rgba(0, 0, 0, 0.15)
	&__breadcrums
		position relative
		z-index 3
		margin-bottom 30px
		a
			&:nth-child(1)
				color $white
				font-family $B-Regular
				font-size 1.125rem
				line-height 24px
				border-bottom 1px solid $white
				transition .3s
				&:hover
					color $breadcrums
					border-color $breadcrums
			&:nth-child(3)
				color $white
				font-family $B-Regular
				font-size 1.125rem
				line-height 24px
				transition .3s
				border-bottom 1px solid $white
				&:hover
					color $breadcrums
					border-color $breadcrums
			&:nth-child(5)
				color $breadcrums
				font-family $B-Regular
				font-size 1.125rem
				line-height 24px
				transition .3s
				display inline-block
				border-bottom 1px solid transparent
				&:hover
					color $white
					border-bottom 1px solid $white
		span
			&:nth-child(2)
				color $breadcrums
				margin 4px
			&:nth-child(4)
				color $breadcrums
				margin 4px
	&__title
		position relative
		z-index 3
		color $white
		font-family $B-Bold
		font-size 5.75rem
		line-height 92px
		width 45%
		margin-bottom 30px
	&__geography
		z-index 3
		position relative
		& p
			font-family $B-Regular
			line-height 24px
			font-size 1.5rem
			color $red
			display inline
		& span
			font-family $B-Regular
			line-height 24px
			margin-left 5px
			font-size 1.5rem
			color $white
	&__image
		position absolute
		top 0
		left 0
		right 0
		bottom 0
	&__shadow
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		z-index 1
		background-color rgba(0,0,0,.85)
	&__map
		z-index 2
		position absolute
		height 135%
		right 0
		top -15px
		width 60%
@media(max-width: 1140px)
	.pageheadingcasedetail
		&__title
			font-size 3rem
			line-height 48px
@media(max-width: 991px)
	.pageheadingcasedetail
		margin-top 120px
		padding 30px
		height auto
		&__map
			top -25px
@media(max-width: 767px)
	.pageheadingcasedetail
		min-height 400px
		display flex
		flex-direction column
		align-items center
		&__title
			width 100%
			text-align center
			margin-bottom 10px
		&__breadcrums
			text-align center
		&__map
			position absolute
			height 100%
			width 60%
			background-position 50% 50% !important
			top auto
			left 20%
			bottom -120px
@media(max-width: 480px)
	.pageheadingcasedetail
		min-height 410px
		margin-top 100px
		padding 30px
		height auto
		&__map
			width 100%
			left 0
			bottom -150px
