#ourteam
	background-color $bg-gray
.ourteam
	&__slider
		width 100%
		.slick-track
			cursor move
			cursor -webkit-grab
			cursor grab
			padding-bottom 99px
		.slick-next:before,
		.slick-prev:before
			transition .3s
			opacity 1
			font-family FontAwesome
			margin-top -2px
		.slick-next:before
			content "\f061"
			&:hover
				color $red
		.slick-prev:before
			content "\f060"
		.slick-prev
			left -40px
			&:hover.slick-prev::before
				color $red
		.slick-next
			right -40px
			&:hover.slick-next::before
				color $red
		.slick-prev,
		.slick-next
			display flex
			align-items center
			justify-content center
			background none
			background-color $red
			border-radius 5px
			width 40px
			transition .3s
			border 2px solid transparent
			height 50px
			&:hover
				border 2px solid $red
				background-color $white
		.slick-dots
			display none !important
			justify-content center
			position relative
			&:before
				content ''
				height 1px
				width 100%
				display inline-block
				position absolute
				background-color #C4C4C4
				top calc(50% - 1px)
			& li
				& button
					opacity 1
					background $white
					width 25px
					height 25px
					margin -2px 4px 0 4px
					z-index 2
					border 1px solid #C4C4C4
					display flex
					align-items center
					justify-content center
					border-radius 50%
				& button::before
					content "" !important
			.slick-active
				position relative
				border-color $red
				& button
					border-color $red
				& button:before
					content ''
					background $red
					border-color $red
					position absolute
					display inline-block
					width 17px
					height 17px
					border-radius 50%
				& button::before
					top 2px
					left 8px
		&-slide
			text-align center
			position relative
			padding-top 95px
			&-arrow
				opacity 0
				position absolute
				display flex
				justify-content center
				width 100%
				top 0
			&-img
				position relative
				height 418px
				&-item
					height 418px
					z-index 2
					transition .3s
				&-ellipsis
					position relative
					border-radius 50%
					background-color rgba(194, 33, 26, 0.9)
					position relative
					z-index -1
					margin -35px auto 0 auto
					width 100%
					height 45px
			&-content
				box-shadow 0px 4px 60px rgba(0, 0, 0, 0.3)
				padding 26px 20px
				opacity 0
				width 380px
				transition .3s
				margin-top 50px
				margin-left -80px
				border-radius 5px
				&-title
					margin-top -40px
					font-family $B-Bold
					font-size 2rem
					line-height 32px
					color $text
					margin-bottom 5px
				&-rank
					font-family $Regular
					font-size 1rem
					line-height 25px
					color $lightgray
					margin-bottom 10px
				&-text
					font-family $Regular
					font-size .875rem
					color $text
					line-height 22px
		.slick-slide
			transition .3s
			transform scale(.9)
			.ourteam__slider-slide-img
				filter grayscale(100%)
				opacity .25
		.slick-center
			transition .3s
			transform scale(1)
			.ourteam__slider-slide-arrow,
			.ourteam__slider-slide-content
				opacity 1
			.ourteam__slider-slide-img
				filter grayscale(0%)
				opacity 1
@media(max-width: 78.75rem)
	.ourteam
		padding-bottom 68px
		&__slider
			.slick-dots
				margin-top -50px
				display flex !important
			&-slide
				&-content
					width calc(100% - 30px)
					margin 45px 15px 0 15px
				&-img
					&-ellipsis
						width 240px
@media(max-width: 30rem)
	.ourteam
		padding-bottom 30px
		&__slider
			.slick-track
				padding-bottom 60px
			.slick-dots
				& li
					& button
						margin-top 2px
						width 15px
						height 15px
				.slick-active
					& button
						&::before
							top 5px
							left 7px
							width 9px
							height 9px
			&-slide
				&-content
					width calc(100% - 30px)
					margin 45px 15px 0 15px
