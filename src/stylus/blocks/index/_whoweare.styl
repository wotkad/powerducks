.whoweare
	padding-bottom 102px
	display flex
	position relative
	flex-wrap wrap
	justify-content space-between
	&__quote
		flex-basis 100%
		border: 1px solid #E5E5E5;
		background $white
		padding 32px 55px
		box-shadow 0px 4px 60px rgba(0, 0, 0, 0.15)
		position relative
		&-bg
			position absolute
			top 19px
			left 15px
		&-img
			position absolute
			right 100px
			top -15px
		&-text
			font-family $Italic
			font-size 1.125rem
			line-height 28px
			color $text
			padding-right 240px
	&__block
		margin-top 60px
		flex-basis 46%
		position relative
		z-index 5
		&-title
			color $red
			font-family $B-Bold
			font-size 2rem
			line-height 32px
			margin-bottom 25px
		&-img
			height 332px
			border-radius 5px
			position relative
			filter grayscale(100%)
			transition 1s
			transition-delay opacity .5s
		&-text
			position relative
			background-color $white
			z-index 5
			& span
				font-family $Bold
				color $red
				font-size 1.125rem
				line-height 28px
			& p
				font-family $Regular
				font-size 1.125rem
				line-height 28px
				color $text
				display inline
		&:nth-child(4) > div:nth-child(2) > p:nth-child(1) > span:nth-child(1)
			padding-left 4px
		&:nth-child(3),
		&:nth-child(4),
		&:nth-child(7)
			display flex
			flex-direction column
			justify-content center
			padding 0 70px
	&__progress
		height 100%
		position absolute
		width 8%
		left 46%
		top 0
		margin-top 182px
		display flex
		justify-content center
		overflow hidden
		padding-bottom 455px
		&-line
			height 100%
			background-color #C4C4C4
			width 1px
			transition .5s linear
			transition-delay .5s
		&-linered
			background-color $red
			height 0
			margin-left -1px
			width 1px
			transition .5s linear
		&-dot
			position absolute
			z-index 4
			display flex
			align-items center
			justify-content center
			&:nth-child(3)
				top 10%
			&:nth-child(4)
				top 39%
			&:nth-child(5)
				top 66%
			&-item
				background $white
				width 25px
				height 25px
				border-radius 50%
				position relative
				z-index 3
				border 1px solid #C4C4C4
				display flex
				align-items center
				justify-content center
				&-center
					background $red
					border-color $red
					position absolute
					display inline-block
					width 17px
					opacity 0
					transition .5s
					transition-delay 1s
					height 17px
					border-radius 50%
					z-index 5
					box-shadow: 0 0 30px 2px #cd0000;
				&-arrowleft
					position absolute
					left -35px
					display inline-block
					background #C4C4C4
					width 35px
					height 1px
					overflow hidden
					&-red
						background $red
						position absolute
						left 0px
						width 20px
						transition 1s
						height 1px
						overflow hidden
						transition-delay .5s
						z-index 2
				&-arrowright
					position absolute
					right -35px
					display inline-block
					background #C4C4C4
					width 35px
					height 1px
					overflow hidden
					&-red
						background $red
						position absolute
						right 0px
						width 20px
						transition 1s
						height 1px
						overflow hidden
						transition-delay .5s
						z-index 1
@media(max-width:69.375rem)
	.whoweare
		padding-bottom 40px
		&__quote
			&-img
				top -15px
				right 17px
			&-text
				padding-right 134px
@media(max-width:64rem)
	.whoweare
		&__block
			&:nth-child(3),
			&:nth-child(4),
			&:nth-child(7)
				padding 0
@media(max-width:51.625rem)
	.whoweare
		&__quote
			&-img
				top 0px
				right 17px
@media(max-width:51.5rem)
	.whoweare
		&__progress
			display none
		&__block
			&-img
				filter grayscale(0%)
@media(max-width:48rem)
	.whoweare
		&__block
			margin-top 25px
			flex-basis 100%
			&:nth-child(1)
				order 1
			&:nth-child(2)
				order 2
			&:nth-child(3)
				order 3
			&:nth-child(4)
				order 5
			&:nth-child(5)
				order 4
			&:nth-child(6)
				order 6
			&:nth-child(7)
				order 7
			&-img
				height 160px
@media(max-width:41.75rem)
	.whoweare
		&__quote
			&-img
				top 15px
				right 17px
			&-text
				font-size 1rem
				line-height 25px
@media(max-width:37.5rem)
	.whoweare
		&__quote
			padding 25px 20px
			&-img
				display none
			&-text
				padding-right 0
